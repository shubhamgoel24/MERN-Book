<link rel="stylesheet" href="<%= assetPath('css/newpass.css') %>">

<h1>Password Reset</h1>

<div class="container-fluid auth-container">
    <form action="/resetpass/submit" method="POST">
        <div class="row toggle-row align-items-center justify-content-center">
            Hello <%= data.user.name %>
            <br>
            Enter New Password
        </div>

        <div class='row align-items-center justify-content-center'>
            <div class='col-1'>
                <i class="fas fa-key"></i>
            </div>
            <div class='col-10'>
                <input type="password" name="password" placeholder="Password" required>
            </div>
        </div>

        <div class='row align-items-center justify-content-center'>
            <div class='col-1'>
                <i class="fas fa-key"></i>
            </div>
            <div class='col-10'>
                <input type="password" name="confirm_password" placeholder="Confirm Password" required>
            </div>
        </div>

        <div class='row align-items-center justify-content-center'>
            <div class='col-11'>
                <input type="hidden" name="token" value="<%= data.accessToken %>">
                <input class='Submit-Button' type= "submit" value="Submit">
            </div>
        </div>
    </form>
</div>

