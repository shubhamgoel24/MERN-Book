<link rel="stylesheet" href="/css/home.css">


<section id="feed-posts">
        <h1>MERN Book</h1>
        <% if(locals.user){ %>
        <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" cols="30" rows="3" placeholder="Whats on your mind ?..." required></textarea>
                <input type= "submit" value="Post">
        </form>
        <% } %>
        <div id="posts-container">
                <ul>
                        <% for(post of posts){ %>
                                <!-- Partials -->
                                <%- include('_posts') -%> 
                        <% } %>
                </ul>
        </div>
</section>

<section id="user-friends">
        <h2>Friends</h2>
        <% for(u of all_users){ %>
                <p>
                        <a href="/users/profile/<%= u.id %>">
                                <%= u.name %>
                        </a>
                </p>
        <% } %>
</section>